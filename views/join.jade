extends default

block content
	section
		.page-header
			h1.page-title
				span QuakeJs login
		p
			form(style='margin:100px;',method='post')
				table
					tr
						td
						td(style='color:red')=locals.error||''
					tr
						td Email 
						td
							input(type='text',name='email')
					tr
						td Password 
						td
							input(type='password',name='password')
					tr
						td Confirm Password 
						td
							input(type='password',name='confirmPassword')
					tr
						td
							a(href='/login') Login
						td
							input(type='submit')